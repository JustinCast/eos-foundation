
<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
	  <%= f.input :name %>
	  <%= f.input :description %>
	  <%= f.input :category_id, collection: @categories , prompt: "Choose a category"  %>
	  <%= f.input :url %>
    <%= f.input :public_telegram %>

	  <h3>Admin Only contact info</h3>
    <h4>This information will only be visible for admins to help verify your account.</h4>
    <%= f.input :telegram %>
    <%= f.input :wechat %>
    <%= f.input :email %>

  </div>

  <div class="form-actions">
    <%= f.hidden_field :status, value: 'Under Review' %>
    <%= f.button :submit %>
  </div>
<% end %>
