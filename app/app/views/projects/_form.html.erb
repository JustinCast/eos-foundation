
<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
	  <%= f.input :name %>
	  <%= f.input :description %>
	  <%= f.input :category_id, collection: @categories , prompt: "Choose a category"  %>
	  <%= f.input :url %>
	  <%= f.input :eos_accounts %>
  </div>

  <div class="form-actions">
    <%= f.hidden_field :status, value: 'Under Review' %>
    <%= f.button :submit %>
  </div>
<% end %>
